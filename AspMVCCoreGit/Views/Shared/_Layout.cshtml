<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspMVCCoreGit</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <environment include="Developement">
        @* we can add  <environment include="Developement"> if we want to work on Developement environment and there we cannot add "min" files *@
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Developement">
        @* we can add  <environment exclude="Developement"> if we want not work on Developement environment and there we can add "min" files*@
        @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
        @* ***********Link Tag Helper is Used for if CDN is not work then its get link from localPath Code Start************@
 @*        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" 
        asp-fallback-test-class="sr-only"
        asp-fallback-test-property="position"
        asp-fallback-test-value="absolute"
        integrity=""
              crossorigin="anonymous"> *@
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        @* ***********Link Tag Helper is Used for if CDN is not work then its get link from localPath Code End************@
    </environment>

    <link rel="icon" type="image/x-icon" href="@Url.Content($"{ViewData["Icon"]}")">

    @* <link rel="stylesheet" href="~/AspMVCCoreGit.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> AspMVCCoreGit Created</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="GetAllBooks">Get All Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AspMVCCoreGit - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <environment include="Developement">
        @* we can add  <environment include="Developement"> if we want to work on Developement environment and there we cannot add "min" files *@
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Developement">
        @* we can add  <environment exclude="Developement"> if we want not work on Developement environment and there we can add "min" files*@
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
       
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    </environment>
   
    @await RenderSectionAsync("Scripts", required: false)
   @*  @await RenderSectionAsync("Carousel", required: false) *@
</body>
</html>
